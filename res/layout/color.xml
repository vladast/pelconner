<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FAF0FF">
	
	
	<FrameLayout
		android:id="@+id/frameLayoutColor"
		android:layout_width="fill_parent"
		android:layout_height="60dip"
		android:layout_alignParentTop="true">
		<ImageView
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:src="@drawable/ic_option_dialog_header_rounded"
			android:scaleType="fitXY"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|left"
			android:layout_marginLeft="15dip"
			android:text="@string/dialog_color_title"
			android:textColor="#e5e5e5"
			android:textStyle="bold"
			android:textSize="30dip"/>
	</FrameLayout>
	
	
	<RelativeLayout
		android:id="@+id/linearLayoutColorButtons"
		android:layout_width="fill_parent"
		android:layout_height="70dip"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		android:paddingTop="5dip"
		android:background="@drawable/ic_button_container_background">
		<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="3dip"
			android:stretchColumns="1">
			<TableRow>
				<Button
					android:id="@+id/buttonColorOk"
					android:layout_width="0dip"
					android:layout_height="50dip"
					android:layout_gravity="left"
					android:layout_alignParentLeft="true"
					android:layout_weight="1"
					android:layout_margin="4dip"
					android:text="@string/button_ok"
					android:textColor="#e5e5e5"
					android:drawableLeft="@drawable/ic_button_accept"
					android:background="@drawable/button_option"/>
				<Button
					android:id="@+id/buttonColorCancel"
					android:layout_width="0dip"
					android:layout_height="50dip"
					android:layout_gravity="right"
					android:layout_alignParentRight="true"
					android:layout_weight="1"
					android:layout_margin="4dip"
					android:text="@string/button_cancel"
					android:textColor="#e5e5e5"
					android:drawableRight="@drawable/ic_button_decline"
					android:background="@drawable/button_option"/>			
			</TableRow>
		</TableLayout>

	</RelativeLayout>

