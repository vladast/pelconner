	<ScrollView
	 	android:layout_height="fill_parent"
	 	android:layout_width="fill_parent"
	 	android:layout_below="@id/frameLayoutColor"
		android:layout_above="@id/linearLayoutColorButtons">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
			<FrameLayout
				android:id="@+id/frameLayoutColorSettings"
				android:layout_width="fill_parent"
				android:layout_height="210dip"
				android:layout_alignParentTop="true"
				android:layout_gravity="center">
				<ImageView
					android:id="@+id/imageViewColorPreview"
					android:layout_width="50dip"
					android:layout_height="50dip"
					android:layout_gravity="left|bottom"
					android:layout_marginTop="5dip"
					android:layout_marginBottom="5dip"
					android:layout_marginLeft="10dip"
					android:background="#00000000"/>
				<TextView
					android:id="@+id/textViewColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="5dip"
					android:layout_gravity="left|top"/>	
				<ImageView
					android:id="@+id/imageViewColorCircle"
					android:layout_width="200dip"
					android:layout_height="200dip"
					android:layout_gravity="center_horizontal"
					android:scaleType="fitXY"
					android:src="@drawable/ic_color_circle"
					android:layout_margin="5dip"/>
			</FrameLayout>
			
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dip"
					android:text="@string/dialog_color_volume"/>
				<SeekBar
					android:id="@+id/seekBarVolume"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dip"
					android:layout_marginRight="15dip"
					android:background="@drawable/seekbar_normal_background"
					android:progressDrawable="@color/transparent"
					android:thumb="@drawable/seekbar_normal_thumb"
					android:max="100"/>
				
				<TextView
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dip"
					android:text="@string/dialog_color_alpha"/>
		
				<SeekBar
					android:id="@+id/seekBarAlpha"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dip"
					android:layout_marginRight="15dip"
					android:background="@drawable/seekbar_normal_background"
					android:progressDrawable="@color/transparent"
					android:thumb="@drawable/seekbar_normal_thumb"
					android:max="255"/>			
			</LinearLayout>
				
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
