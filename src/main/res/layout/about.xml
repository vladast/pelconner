<?xml version="1.0" encoding="utf-8"?>

<!-- About Dialog -->

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="250dip"
	android:layout_height="320dip"
	android:orientation="vertical"
	android:background="#FAF0FF">
	<ImageView
		android:id="@+id/imageViewAbout"
		android:src="@drawable/ic_about"
		android:layout_width="fill_parent"
		android:layout_height="125dip"
		android:layout_alignParentTop="true"
		android:scaleType="fitXY"/>
	<ImageView
		android:id="@+id/imageViewAboutShadow"
		android:src="@drawable/ic_about_drop_shadow"
		android:layout_width="fill_parent"
		android:layout_height="10dip"
		android:scaleType="fitXY"
		android:layout_below="@id/imageViewAbout"/>
	<TextView
		android:id="@+id/textViewApplication"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@id/imageViewAboutShadow"
		android:layout_margin="10dip"
		android:text="@string/app_name"
		android:textStyle="bold"
		android:textColor="#000000"
		android:textSize="20dip"
		android:gravity="left"/>
	<TextView
		android:id="@+id/textViewVersion"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@id/textViewApplication"
		android:layout_marginLeft="10dip"
		android:layout_marginBottom="10dip"
		android:textColor="#000000"
		android:gravity="left"/>
	<TextView
		android:id="@+id/textViewLicense"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@id/textViewVersion"
		android:layout_marginLeft="15dip"
		android:text="@string/about_license"
		android:gravity="left"/>
	<TextView
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_below="@id/textViewLicense"
		android:layout_marginLeft="15dip"
		android:text="@string/about_year"
		android:gravity="left"/>  	
	<Button
		android:id="@+id/buttonClose"
		android:layout_height="30dip"
		android:layout_width="70dip"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_margin="5dip"
		android:text="@string/button_close"
		android:background="#DBD8FF"/>
</RelativeLayout>
