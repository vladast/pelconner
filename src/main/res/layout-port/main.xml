<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/main_background_background_port">
	<ImageView
		android:layout_width="210dip"
		android:layout_height="200dip"
		android:layout_gravity="left|bottom"
		android:background="@drawable/main_background_logo"/>
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="126dip"
		android:layout_gravity="right|top"
		android:background="@drawable/main_background_name"/>	
	<LinearLayout
		android:layout_width="90dip"
		android:layout_height="200dip"
		android:layout_gravity="bottom|right"
		android:layout_marginBottom="10dip"
		android:paddingTop="10dip"
		android:orientation="vertical">
		<Button
			android:id="@+id/buttonNewPicture"
			android:layout_width="60dip"
			android:layout_height="60dip"
			android:layout_gravity="right"
			android:background="@drawable/button_main_new"/>
		<Button
			android:id="@+id/buttonCamera"
			android:layout_width="60dip"
			android:layout_height="60dip"
			android:layout_gravity="right"
			android:background="@drawable/button_main_camera"/>
		<Button
			android:id="@+id/buttonGallery"
			android:layout_width="60dip"
			android:layout_height="60dip"
			android:layout_gravity="right"
			android:background="@drawable/button_main_gallery"/>
	</LinearLayout>
</FrameLayout>
